<h1>Update Question</h1>


 
<form action="/update/{{question._id}}" method="post">
 


  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" id="description"  value="{{question.description}}" name="description" />
  </div>
  <div class="form-group">
    <label for="correct">Correct answer</label>
    <input type="text" class="form-control" id="correct" value="{{question.correct}}" name="correct" />
  </div>
  <div class="form-group">
    <label for="false1">False answer</label>
    <input type="text" class="form-control" id="false1" value="{{question.false1}}" name="false1" />
  </div>
  <div class="form-group">
    <label for="false2">False answer</label>
    <input type="text" class="form-control" id="false2" value="{{question.false2}}" name="false2" />
  </div>
  <div class="form-group">
    <label for="false3">False answer</label>
    <input type="text" class="form-control" id="false3" value="{{question.false3}}" name="false3" />
  </div>


 
  
 
  <button>Save changes</button>
</form>